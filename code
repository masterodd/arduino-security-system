#include <Keypad.h>

#include<LiquidCrystal.h>

#include<EEPROM.h>

LiquidCrystal lcd(12, 11, 5, 4, 3, 2);  

char password[4];

char initial_password[4],new_password[4];

int i,j;


const int DOOR1_SENSOR_PIN = 50; 
const int DOOR2_SENSOR_PIN = 45; 
const int IR1_SENSOR_PIN = 47; 
const int IR2_SENSOR_PIN = 41;



char key_pressed=0;
int screencord[20][4];
int cursorpos;
char alarmmode;
bool alarm, login, passwordset,ses, ses2,ses3,ses4;
bool ir_a, ir_b, d_c, d_d, all_in, ir1, ir2, d1, d2;



const byte ROWS = 4; //four rows
const byte COLS = 4; //four columns
char keys[ROWS][COLS] = {
  {'1','2','3','A'},
  {'4','5','6','B'},
  {'7','8','9','C'},
  {'*','0','#','D'}
};

d

byte rowPins[ROWS] = {22, 24, 26, 28}; //connect to the row pinouts of the keypad
byte colPins[COLS] = {30, 32, 34, 36}; //connect to the column pinouts of the keypad

Keypad keypad = Keypad( makeKeymap(keys), rowPins, colPins, ROWS, COLS );

int num;
int yesno=0;


int doorState1,doorState2,irState1,irState2;


void setup()

{
  //buzzer
  pinMode(48,OUTPUT);
  
  //door sensor1,2 Ir1,2
  pinMode(DOOR1_SENSOR_PIN, INPUT_PULLUP);
  pinMode(DOOR2_SENSOR_PIN, INPUT_PULLUP);
  
  pinMode(IR1_SENSOR_PIN, INPUT_PULLUP);
  pinMode(IR2_SENSOR_PIN, INPUT_PULLUP);
  
  //login deactivated from start
  login = false;
  ses = false;
  ses2 = false;
  ses3 = false;
  alarm = false;
  ir_a = true;
  ir_b = true; 
  d_c = true;
  d_d = true;
  all_in = false;
  ses4 = false;
  ir1 = false;
  ir2 = false;
  d1 = false;
  d2 = false;


  lcd.begin(20,4);

  lcd.print(" Welcome");

  lcd.setCursor(0,1);

  lcd.print("Security system");

  delay(2000);

  lcd.clear();


  initialpassword();
   cursorpos=1;
   Serial.begin(9600);
   
}




void loop()

{

doorState1 = digitalRead(DOOR1_SENSOR_PIN); // read state
doorState2 = digitalRead(DOOR2_SENSOR_PIN); // read state
irState1 = digitalRead(IR1_SENSOR_PIN); // read state
irState2 = digitalRead(IR2_SENSOR_PIN); // read state

Serial.print("\n");
Serial.print(irState2);

  
if(EEPROM.read(6))if(irState1 == HIGH){alarm=true;ses4 = false;ir1=true;Serial.print("alarm");}
if(EEPROM.read(7))if(irState2 == HIGH){alarm=true;ses4 = false;ir2=true;Serial.print("alarm");}
if(EEPROM.read(8))if(doorState1 == HIGH){alarm=true;ses4 = false;d1=true;Serial.print("alarm");}
if(EEPROM.read(9))if(doorState2 == HIGH){alarm=true;ses4 = false;d2=true;Serial.print("alarm");}  

if(!alarm){
  
  //alarm buzzer
  digitalWrite(48,LOW);

  
  
if(login){



key_pressed = keypad.getKey();

  
  if (key_pressed=='#'){
    login = false;
    ses = false;
    i = 0;
    key_pressed=0;
  }
  if(EEPROM.read(6)){lcd.setCursor(4,0);lcd.print("on ");}else{lcd.setCursor(4,0);lcd.print("off");}
  if(EEPROM.read(7)){lcd.setCursor(4,1);lcd.print("on ");}else{lcd.setCursor(4,1);lcd.print("off");}
  if(EEPROM.read(8)){lcd.setCursor(12,0);lcd.print("on ");}else{lcd.setCursor(12,0);lcd.print("off");}
  if(EEPROM.read(9)){lcd.setCursor(12,1);lcd.print("on ");}else{lcd.setCursor(12,1);lcd.print("off");}
  if(!ses3){
    
  lcd.setCursor(0,0);lcd.print("IR1:");

  lcd.setCursor(7,0);lcd.print("  D1:");

  lcd.setCursor(0,1);lcd.print("IR2:");
 
  lcd.setCursor(8,1);lcd.print(" D2:");//
  lcd.setCursor(12,1);lcd.print("on ");
  lcd.setCursor(0,2);lcd.print("IR1(A)");lcd.setCursor(7,2);lcd.print("IR2(B)");lcd.setCursor(14,2);lcd.print("ALL(*)");
  lcd.setCursor(0,3);lcd.print("D1(C)");lcd.setCursor(6,3);lcd.print("D2(D)");lcd.setCursor(13,3);lcd.print("EXIT(#)");
  ses3=true;
  }
  switch(key_pressed){
  case('A'):{ir_a=!ir_a;EEPROM.write(6,ir_a); Serial.println(ir_a);break;}
  case('B'):{ir_b=!ir_b;EEPROM.write(7,ir_b); Serial.println(ir_b);break;}
  case('C'):{d_c=!d_c;EEPROM.write(8,d_c); Serial.println(d_c);break;}
  case('D'):{d_d=!d_d;EEPROM.write(9,d_d); Serial.println(d_d);break;}
  case('*'):{all_in=!all_in; if(all_in){ir_a=true;EEPROM.write(6,ir_a);ir_b=true;EEPROM.write(7,ir_b);d_c=true;EEPROM.write(8,d_c);d_d=true;EEPROM.write(9,d_d);}else{ir_a=false;EEPROM.write(6,ir_a);ir_b=false;EEPROM.write(7,ir_b);d_c=false;EEPROM.write(8,d_c);d_d=false;EEPROM.write(9,d_d);}Serial.println(all_in);break;}
  }


}
  else{



 

  key_pressed = keypad.getKey();
  if(!ses){
 
       lcd.clear();

      lcd.print("Enter Password");
      lcd.setCursor(0,3);lcd.print("to change PIN(#)");
      lcd.setCursor(0,1);

      ses = true;
  }
  
  
  if(key_pressed=='#')

    change();

  if (key_pressed)

  {

    password[i++]=key_pressed;

    lcd.print(key_pressed);

      }

  if(i==4)

  {

    delay(200);

    for(int j=0;j<4;j++)

      initial_password[j]=EEPROM.read(j);

    if(!(strncmp(password, initial_password,4)))

    {

      lcd.clear();

      lcd.print("Pass Accepted");
      delay(2000);
      login = true;
      ses2=false;
      ses3=false;
  

    }

    else

    {



      lcd.clear();

      lcd.print("Wrong Password");

      lcd.setCursor(0,1);


      delay(2000);

      lcd.clear();

      lcd.print("Enter Password");

      lcd.setCursor(0,1);

      i=0;




    }

  }


}

}
else{
  if(!ses4){
    digitalWrite(48,HIGH);

lcd.clear();
lcd.setCursor(0,0);
lcd.print("ALARM");
if(ir1){lcd.setCursor(8,1);lcd.print("IR1");EEPROM.write(6,false);}
if(d1){lcd.setCursor(16,1);lcd.print("D1");EEPROM.write(8,false);}
if(ir2){lcd.setCursor(8,2);lcd.print("IR2");EEPROM.write(7,false);}
if(d2){lcd.setCursor(16,2);lcd.print("D2");EEPROM.write(9,false);}
lcd.setCursor(0,3);
lcd.print("ENTER PIN TO OFF");

lcd.setCursor(0,1);
i=0;
ses4=true;
}

key_pressed = keypad.getKey();
if (key_pressed)

  {

    password[i++]=key_pressed;

    lcd.print(key_pressed);

      }

  if(i==4)

  {

    delay(200);

    for(int j=0;j<4;j++)

      initial_password[j]=EEPROM.read(j);

    if(!(strncmp(password, initial_password,4)))

    {

      lcd.clear();

      lcd.print("Pass Accepted");
      delay(2000);
   login = true;
      ses2=false;
      ses3=false;
      alarm = false;
      ir1 = false;
      ir2 = false;
      d1 = false;
      d2 = false;
 
      Serial.print("alarm OFF");


    }

    else

    {



      lcd.clear();

      lcd.print("Wrong Password");
      
if(ir1){lcd.setCursor(8,1);lcd.print("IR1");EEPROM.write(6,false);}
if(d1){lcd.setCursor(16,1);lcd.print("D1");EEPROM.write(8,false);}
if(ir2){lcd.setCursor(8,2);lcd.print("IR2");EEPROM.write(7,false);}
if(d2){lcd.setCursor(16,2);lcd.print("D2");EEPROM.write(9,false);}
      lcd.setCursor(0,3);


     delay(2000);

      lcd.clear();
      
      lcd.print("Enter Password");
if(ir1){lcd.setCursor(8,1);lcd.print("IR1");EEPROM.write(6,false);}
if(d1){lcd.setCursor(16,1);lcd.print("D1");EEPROM.write(8,false);}
if(ir2){lcd.setCursor(8,2);lcd.print("IR2");EEPROM.write(7,false);}
if(d2){lcd.setCursor(16,2);lcd.print("D2");EEPROM.write(9,false);}
      lcd.setCursor(0,1);

      i=0;




    }


}
}
}
void change()

{

  int j=0;

  lcd.clear();

  lcd.print("Current Password");

  lcd.setCursor(0,1);

  while(j<4)

  {

    char key=keypad.getKey();

    if(key)

    {

      new_password[j++]=key;

      lcd.print(key);

       

    }

    key=0;

  }






  if((strncmp(new_password, initial_password, 4)))

  {

    lcd.clear();

    lcd.print("Wrong Password");

    lcd.setCursor(0,1);

    lcd.print("Try Again");

    delay(1000);

  }

  else

  {

    j=0;

    lcd.clear();

    lcd.print("New Password:");

    lcd.setCursor(0,1);

    while(j<4)

    {

      char key=keypad.getKey();

      if(key)

      {

        initial_password[j]=key;

        lcd.print(key);

        EEPROM.write(j,key);

        j++;

     

      }

    }
     lcd.setCursor(0,2);
    lcd.print("Pass Changed");
    
    delay(1000);

  }

  lcd.clear();

  lcd.print("Enter Password");

  lcd.setCursor(0,1);

  key_pressed=0;

}





void initialpassword(){

  for(int j=0;j<4;j++)

    EEPROM.write(j, j+49);

  for(int j=0;j<4;j++)

    initial_password[j]=EEPROM.read(j);

}
